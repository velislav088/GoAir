@model GoAir.ViewModels.CreateFlightViewModel

@{
    ViewData["Title"] = "Register Flight";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Register Flight</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Schedule
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="FlightNumber" class="form-label"></label>
                        <input asp-for="FlightNumber" class="form-control" />
                        <span asp-validation-for="FlightNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DepartureTime" class="form-label"></label>
                        <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DepartureTime" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<FlightStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartureAirportId" class="form-label"></label>
                            <select asp-for="DepartureAirportId" class ="form-select" asp-items="ViewBag.DepartureAirportId"></select>
                            <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ArrivalAirportId" class="form-label"></label>
                            <select asp-for="ArrivalAirportId" class ="form-select" asp-items="ViewBag.ArrivalAirportId"></select>
                            <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AircraftId" class="form-label"></label>
                        <select asp-for="AircraftId" class="form-select" asp-items="ViewBag.AircraftId"></select>
                        <span asp-validation-for="AircraftId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> Register Flight</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const form = document.querySelector('form[asp-action="Create"], form[action$="/Flights/Create"]');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const depMsg = document.querySelector('[data-valmsg-for="DepartureAirportId"]');
                const arrMsg = document.querySelector('[data-valmsg-for="ArrivalAirportId"]');
                const timeMsg = document.querySelector('[data-valmsg-for="DepartureTime"]');
                if (depMsg) depMsg.textContent = '';
                if (arrMsg) arrMsg.textContent = '';
                if (timeMsg) timeMsg.textContent = '';

                const dep = document.querySelector('[name="DepartureAirportId"]')?.value;
                const arr = document.querySelector('[name="ArrivalAirportId"]')?.value;
                const dt = document.querySelector('[name="DepartureTime"]')?.value;

                let hasError = false;

                if (dep && arr && dep === arr) {
                    if (depMsg) depMsg.textContent = 'Departure and arrival airports must be different.';
                    if (arrMsg) arrMsg.textContent = 'Departure and arrival airports must be different.';
                    hasError = true;
                }

                if (dt) {
                    const picked = new Date(dt);
                    const now = new Date();
                    if (isNaN(picked.getTime()) || picked <= now) {
                        if (timeMsg) timeMsg.textContent = 'Departure time must be in the future.';
                        hasError = true;
                    }
                }

                if (hasError) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            });
        })();
    </script>
}
