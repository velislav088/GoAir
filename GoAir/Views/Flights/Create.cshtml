@model GoAir.ViewModels.CreateFlightViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label"></label>
                <input asp-for="FlightNumber" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FlightStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirportId" class="control-label"></label>
                <select asp-for="DepartureAirportId" class ="form-control" asp-items="ViewBag.DepartureAirportId"></select>
                <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirportId" class="control-label"></label>
                <select asp-for="ArrivalAirportId" class ="form-control" asp-items="ViewBag.ArrivalAirportId"></select>
                <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AircraftId"></label>
                <select asp-for="AircraftId" class="form-control" asp-items="ViewBag.AircraftId"></select>
                <span asp-validation-for="AircraftId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const form = document.querySelector('form[asp-action="Create"], form[action$="/Flights/Create"]');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const depMsg = document.querySelector('[data-valmsg-for="DepartureAirportId"]');
                const arrMsg = document.querySelector('[data-valmsg-for="ArrivalAirportId"]');
                const timeMsg = document.querySelector('[data-valmsg-for="DepartureTime"]');
                if (depMsg) depMsg.textContent = '';
                if (arrMsg) arrMsg.textContent = '';
                if (timeMsg) timeMsg.textContent = '';

                const dep = document.querySelector('[name="DepartureAirportId"]')?.value;
                const arr = document.querySelector('[name="ArrivalAirportId"]')?.value;
                const dt = document.querySelector('[name="DepartureTime"]')?.value;

                let hasError = false;

                if (dep && arr && dep === arr) {
                    if (depMsg) depMsg.textContent = 'Departure and arrival airports must be different.';
                    if (arrMsg) arrMsg.textContent = 'Departure and arrival airports must be different.';
                    hasError = true;
                }

                if (dt) {
                    const picked = new Date(dt);
                    const now = new Date();
                    if (isNaN(picked.getTime()) || picked <= now) {
                        if (timeMsg) timeMsg.textContent = 'Departure time must be in the future.';
                        hasError = true;
                    }
                }

                if (hasError) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            });
        })();
    </script>
}
