@model GoAir.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger">Delete Flight</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Schedule
        </a>
    </div>
</div>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
    <p>Are you sure you want to delete this flight? This action cannot be undone.</p>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Flight Details</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FlightNumber)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FlightNumber)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DepartureTime)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartureTime)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DepartureAirport)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartureAirport.City)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ArrivalAirport)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ArrivalAirport.City)</dd>
        </dl>
    </div>
    <div class="card-footer bg-light">
        <form asp-action="Delete" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Permanently Delete</button>
            </div>
        </form>
    </div>
</div>
