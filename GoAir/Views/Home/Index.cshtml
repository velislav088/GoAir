@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
    <div class="col">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary text-white p-3 rounded-3 me-3">
                        <i class="bi bi-ticket-perforated fs-3"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Flights</h5>
                        <small class="text-muted">Manage Schedules</small>
                    </div>
                </div>
                <p class="card-text">View active flights, delay status, and passenger manifests.</p>
                <a asp-controller="Flights" asp-action="Index" class="btn btn-outline-primary stretched-link">Manage Flights</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 shadow-sm border-success">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success text-white p-3 rounded-3 me-3">
                        <i class="bi bi-buildings fs-3"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Airports</h5>
                        <small class="text-muted">Global Destinations</small>
                    </div>
                </div>
                <p class="card-text">Manage airport details, terminals, and regional data.</p>
                <a asp-controller="Airports" asp-action="Index" class="btn btn-outline-success stretched-link">Manage Airports</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 shadow-sm border-info">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info text-white p-3 rounded-3 me-3">
                        <i class="bi bi-airplane fs-3"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Aircraft</h5>
                        <small class="text-muted">Fleet Management</small>
                    </div>
                </div>
                <p class="card-text">Track fleet status, maintenance logs, and specifications.</p>
                <a asp-controller="Aircraft" asp-action="Index" class="btn btn-outline-info stretched-link">Manage Fleet</a>
            </div>
        </div>
    </div>
</div>

<h3>Quick Actions</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">Description</th>
                <th scope="col">Link</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Register Flight</td>
                <td>Add a new flight to the schedule</td>
                <td><a asp-controller="Flights" asp-action="Create">Go</a></td>
            </tr>
            <tr>
                <td>Add Airport</td>
                <td>Register a new destination airport</td>
                <td><a asp-controller="Airports" asp-action="Create">Go</a></td>
            </tr>
            <tr>
                <td>New Aircraft</td>
                <td>Add a new aircraft to the fleet</td>
                <td><a asp-controller="Aircraft" asp-action="Create">Go</a></td>
            </tr>
        </tbody>
    </table>
</div>
